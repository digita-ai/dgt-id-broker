{
  "name": "@digita-ai/dgt-id-kit",
  "version": "0.4.0",
  "description": "Collection of client-side utilities for authentication with Solid services",
  "author": "Wouter Termont <wouter.termont@digita.ai>",
  "main": "./dist/dgt-id-kit.umd.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/dgt-id-kit.es.js",
  "exports": {
    ".": {
      "import": "./dist/dgt-id-kit.es.js",
      "require": "./dist/dgt-id-kit.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "demo": "vite",
    "build": "rimraf ./dist && vite build && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:staged": "lint-staged",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --silent --runInBand --passWithNoTests",
    "posttest": "jest-coverage-thresholds-bumper --silent --coverage-summary-path coverage-summary.json"
  },
  "dependencies": {
    "@digita-ai/inrupt-solid-client": "0.4.0",
    "@types/uuid": "^8.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@digita-ai/typescript-config": "^0.3.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.44",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "jest-coverage-thresholds-bumper": "0.0.4",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "vite": "2.2.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digita-ai/dgt-id-broker.git",
    "directory": "packages/dgt-id-kit"
  },
  "bugs": {
    "url": "https://github.com/digita-ai/dgt-id-broker/issues"
  },
  "eslintConfig": {
    "ignorePatterns": [ "lib-old/" ]
  },
  "jest": {
    "displayName": "id-kit",
    "preset": "@digita-ai/jest-config",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testPathIgnorePatterns": [
      "lib-old"
    ]
  }
}
